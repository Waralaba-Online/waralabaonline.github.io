---
const { brand } = Astro.props;
import { Picture } from "astro:assets";
import Link from "./ui/link.astro";
import Tick from "./ui/icons/tick.astro";
---

<div class="flex flex-col w-full border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md items-center">
  <div class="text-center">
    <Picture
      src={brand.image}
      alt={brand.name}
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
    <h4 class="text-lg font-medium text-gray-400 mt-4">{brand.name}</h4>
    <p class="mt-3 text-4xl font-bold text-black md:text-4xl">
      {brand.description}
    </p>
  </div>
  <ul class="grid mt-8 text-left gap-y-4">
    {brand.features.map((item) => (
      <li class="flex items-start gap-3 text-gray-800">
        <Tick class="w-6 h-6" />
        <span>{item}</span>
      </li>
    ))}
  </ul>
  <div class="flex mt-8">
    <Link
      href={brand.button.link || "#"}
      block
      style="primary">
      {brand.button.text || "Pelajari Lebih Lanjut"}
    </Link>
  </div>
</div>
